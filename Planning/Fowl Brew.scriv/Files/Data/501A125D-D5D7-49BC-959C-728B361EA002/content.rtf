\par\plain \f0\fs24\b0\i0\cf1
\par\plain {\f0\fs24\b0\i0\cf1 VERMONT}
\par\plain {\f0\fs24\b0\i0\cf1 MADAM HOPPIN. I humbly accept your case. I will do whatever I get to the bottom of it.}
\par\plain \f0\fs24\b0\i0\cf1
\par\plain {\f0\fs24\b0\i0\cf1 MADAM HOPPIN}
\par\plain {\f0\fs24\b0\i0\cf1 Thank you\loch\af0\hich\af0\dbch\af0\uc1\u8230\'85Thank you Inspector...}
